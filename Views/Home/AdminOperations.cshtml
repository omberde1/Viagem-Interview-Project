@model List<ViagemCRUDProject.Models.User>

@{
    ViewBag.Title = "Admin Operations";
}

<h2>All Users</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full Name</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">Country</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th>@user.UserId</th>
                @{ string fullName = user.FirstName + " " + user.LastName; }
                <td>@fullName</td>
                <td>@user.Email</td>
                <td>@user.Gender</td>
                <td>@user.Country</td>
                <td>
                    <a href="@Url.Action("UserDetails", "Home", new { id = user.UserId })">Details</a> |
                    <a href="@Url.Action("UserEdit", "Home", new { id = user.UserId })">Edit</a> |
                    <a href="@Url.Action("UserDelete", "Home", new { id = user.UserId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>